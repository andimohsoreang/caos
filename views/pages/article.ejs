<%- include('../partials/header'); %> <%- include('../partials/sidebar'); %>
<div id="main">
    <div class="page-heading">
        <h3>Masukan Artikel</h3>
    </div>
    <section class="section">
        <div class="card">
          <div class="card-header">
            <div>
              <h5>Silahkan Masukan Artikel</h5>
            </div>
          </div>
          <div class="card-body">
            <form action="article" method="post" data-parsley-validate id="formArticle">
              <div class="form-group">
                <label for="basicInput">Judul</label>
                <input
                  type="text"
                  class="form-control"
                  name="title"
                  data-parsley-required="true"
                />
              </div>
                <div class="form-group">
                  <label for="basicInput">Kategori</label>
                  <select name="category" id="category"  class="form-control" data-parsley-required="true" step="0.1">
                    <option value=""></option>
                    <option value="Naruto">Naruto</option>
                    <option value="Sasuke">Sasuke</option>
                    <option value="Kakasi">Kakasi</option>
                    <option value="Itachi">Itachi</option>
                    </select>
                </div>
                <p>Block some text to display options in poppovers</p>
                <div id="full" name ="bodyArticle">
                  <p>Hello World!</p>
                  <p>Some initial <strong>bold</strong> text</p>
                  <p><br /></p>
                  </div>
              <div class="mt-4 d-flex justify-content-between">
                <a href="/#" class="btn btn-secondary">
                  <i class="bi bi-arrow-left-square me-1"></i>
                  Daftar Artikel
                </a>
                <button type="submit" class="btn btn-primary">
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>
</div>
<%- include('../partials/footer'); %>